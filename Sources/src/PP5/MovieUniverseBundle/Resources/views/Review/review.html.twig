{% extends 'PP5MovieUniverseBundle::base.html.twig' %}

{% block title %}
	Dodaj recenzję filmu {{ movie.title }}
{% endblock %}

{% block content %}
	{% if app.user %}
		<div align="center">
		<h3>Dodaj recenzję filmu</h3>
		<h2><a href="{{ path('movie', {'slug': movie.id}) }}">{{ movie.title }}</a></h2>
			<form method="POST">
				{{ form_start(form) }}
					{{ form_errors(form) }}
					{{ form_widget(form.reviewContent) }}<br>
					<input type="submit" value="Wyślij recenzję!"/>
				{{ form_end(form) }}
			</form>	
		</div>
	{% elseif not app.user %}
		<div align="center">
			<h3>Bardzo nam przykro, lecz tylko zalogowani użytkownicy mogą dodawać recenzje.</h3>
		</div>
	{% endif %}

{% endblock %}

